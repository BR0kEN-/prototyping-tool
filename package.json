{
  "engines": {
    "npm": ">=4"
  },
  "scripts": {
    "start": "babel-node node_modules/.bin/webpack-dev-server",
    "build": "rm -rf ./dist/js/ ./dist/css/ && babel-node node_modules/.bin/webpack"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "chalk": "2.0.1",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-watch": "^3.1.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "identity-obj-proxy": "^3.0.0",
    "json-loader": "^0.5.7",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.1.1",
    "prompt": "^1.0.0",
    "replace": "^0.3.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "3.11.0",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^2.11.2",
    "write-file-webpack-plugin": "^4.1.0",
    "browser-sync-webpack-plugin": "^2.0.1",
    "gulp-connect-php": "^1.0.3",
    "browser-sync": "^2.23.6",
    "stylelint": "^9.1.3",
    "stylelint-webpack-plugin": "^0.10.3",
    "stylelint-config-standard": "^18.2.0",
    "eslint-loader": "^2.0.0"
  },
  "devConfig": {
    "server": {
      "base": "./dist",
      "port": 9011,
      "files": [
        "**/*.php"
      ],
      "router": "./.router.php",
      "hostname": "127.0.0.1"
    },
    "assets": {
      "style": {
        "source": "./scss/main.scss",
        "result": "./dist/css/main.css"
      },
      "script": {
        "source": "./js/main.js",
        "result": "./dist/js/main.js"
      }
    },
    "externals": {
      "Drupal": "Drupal",
      "jQuery": "jQuery"
    },
    "provides": {
      "$": "jQuery"
    }
  }
}
